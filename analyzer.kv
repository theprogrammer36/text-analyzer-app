Interface:
    orientation: "vertical"
    padding:[dp(20),dp(20),dp(20),dp(20)]
    spacing:dp(20)

    Label:
        text: "Sentiment Analyzer by Thousif"
        size_hint_y:None
        height:dp(50)

    TextInput:
        id: textInput
        size_hint:1,0.6

    BoxLayout:
        size_hint:1,0.1
        spacing:dp(20)
        Button:
            text: "Analyzer"
            on_press:root.analyze()
        Button:
            text: "Clear"

    Label:
        id: label
        size_hint: 1,0.3
        text: "Result"
